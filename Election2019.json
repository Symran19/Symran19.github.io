{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 450,
  "height": 600,
  "data": {
    "url": "https://raw.githubusercontent.com/Symran19/Symran19.github.io/main/WPCMap.json",
    "format": {"type": "topojson", "feature": "wpc"}
  },
  "projection": {"type": "azimuthalEquidistant"},
  "transform": [
    {
      "lookup": "properties.PCON13NM",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/Symran19/Symran19.github.io/main/constituencyresults.csv%20-%20Copy.csv"
        },
        "key": "constituency_name",
        "fields": ["winning_party"]
      }
    }
  ],
  "mark": {"type": "geoshape", "stroke": "black", "strokeWidth": 0.2},
  "encoding": {
    "color": {
      "field": "winning_party",
      "type": "nominal",
      "title": "Political Party",
      "scale": {
        "range": [
          "#2980b9",
          "#0abdc6",
          "#e67e22",
          "#Cb4335",
          "#8e44ad",
          "#f4d03f",
          "#e11584"
        ]
      },
      "legend": {
        "labelExpr": "{'Con': 'Conservative', 'Green': 'Green Party', 'Lab': 'Labour', 'LD': 'Liberal Democrates', 'SNP': 'SNP', 'null': 'N/A', 'PC': 'Plaid Cymru', 'Spk': 'Speaker'}[datum.label]"
      }
    },
    "tooltip": {
      "field": "properties.PCON13NM",
      "type": "nominal",
      "title": "Constituency"
    }
  },
  "config": {}
}
